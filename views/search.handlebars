<ul class="breadcrumbs">
  <li><a href="/?showLabels={{showLabels}}">Home</a></li>
  <li>Search</li>
</ul>

<h1>{{title}}</h1>

<form action="/search" method="get" class="search-box" style="margin-bottom: 30px;">
  <input type="text" name="q" placeholder="Search the database..." value="{{searchTerm}}" style="flex-grow: 1; padding: 10px; font-size: 16px;">
  <input type="hidden" name="showLabels" value="{{showLabels}}">
  <button type="submit" style="padding: 10px 20px; font-size: 16px;">Search</button>
</form>

{{#if searchTerm}}
  <p>Displaying results for<strong>{{searchTerm}}</strong></p>
  
  <h2>Search results</h2>
  
  <ul class="search-results">
    {{#each results}}
      <li>
        <div class="resource-list-item">
          <span class="resource-icon {{getIconClass this.label}}"></span>
          <a href="/resource?uri={{encodeURIComponent this.uri}}&showLabels={{../showLabels}}">
            {{this.label}}
          </a>
        </div>
      </li>
    {{/each}}
  
    {{#unless results.length}}
      <li>No results found for the search "{{searchTerm}}".</li>
    {{/unless}}
  </ul>
{{else}}
  <p>Enter a keyword above to find resources in the database  </p>
{{/if}}
<div class="display-mode">
  <label for="displayToggle">Visa mänskligt läsbara etiketter:</label>
  <label class="switch">
    <input type="checkbox" id="displayToggle" {{#if showLabels}}checked{{/if}}>
    <span class="slider"></span>
  </label>
  <span class="display-mode-text">{{#if showLabels}}På{{else}}Av{{/if}}</span>
  </div>
